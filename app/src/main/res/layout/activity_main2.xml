<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beigh"
    tools:context=".MainActivity2">

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuestras citas "
            android:layout_gravity="center"
            android:textSize="30sp"

             android:textStyle="bold"


            android:layout_marginBottom="-40dp"/>

        <ImageView

            android:src="@drawable/huellas1"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            tools:ignore="RtlHardcoded" />
        <ImageView
            android:src="@drawable/gatito"

            android:layout_width="@dimen/_200dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            />



        <EditText
            android:hint="@string/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:hint="@string/edad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:hint="@string/raza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <EditText
            android:hint="@string/gato_perro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:hint="@string/descripci_n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btnd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Solicitar"
           android:layout_marginBottom="-30dp"/>
        <ImageView
            android:src="@drawable/veterinario"
            android:layout_gravity="right"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginBottom="50dp"

            />
        <ImageView
            android:src="@drawable/mundo"
            android:layout_gravity="left"
            android:layout_width="160dp"
            android:layout_height="200dp"

         />

    </LinearLayout>
